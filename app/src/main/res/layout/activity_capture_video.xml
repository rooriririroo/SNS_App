<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CaptureVideoActivity">

    <ImageView
        android:id="@+id/captureVideo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ir" />


    <TextView
        android:id="@+id/captureVideo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleX="2"
        android:scaleY="2"
        android:drawableStart="@drawable/outline_play_circle_outline_opacity30_18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/captureVideo_exit"
            android:onClick="exitClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:src="@drawable/outline_clear_white_18dp" />

        <TextView
            android:id="@+id/captureVideo_attach"
            android:onClick="attachClick"
            android:layout_marginTop="3dp"
            android:layout_marginStart="290dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@null"
            android:text="첨부"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/captureVideo_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:src="@drawable/outline_rotate_90_degrees_ccw_white_18dp" />

        <ImageButton
            android:id="@+id/captureVideo_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:src="@drawable/outline_crop_white_18dp" />

    </LinearLayout>

</RelativeLayout>